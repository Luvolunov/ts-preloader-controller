{
    "compilerOptions": {
        "target": "ES5",
        "baseUrl": ".",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "diagnostics": true,
        "outDir": "build",
        "declaration": true
    },
    "exclude": ["node_modules", "build", "**/*.spec.ts"],
    "include": ["src/*"]
}